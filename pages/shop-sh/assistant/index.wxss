    height: 50px;
    float: left;
    text-align: center;
}

.operationLine {
    width: 20%;
    line-height: 50px;
    height: 50px;
    float: left;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.operationLineBtn {
