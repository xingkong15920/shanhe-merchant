    height: 22px;
    line-height: 22px;
    color: #fff;
    background: #ffa20a;
    border-radius: 4px;
    font-size: 14px;
}

.shopName {
    font-size: 16px;
    line-height: 50px;
}

.listIcon {
    width: 20px;
    height: 10px;
    font-size: 12px;
    position: absolute;
    top: 20px;
    right: 15px;
    text-align: center;
}

.active .listIcon {
    transform: rotate(-180deg);
}

.active .operation {
    display: flex;
}

.operation {
