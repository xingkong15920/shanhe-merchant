/* pages/shop-sh/details/index.wxss */

view, scroll-view, ::after, ::before {
    box-sizing: border-box;
    transition: 0.3s all;
}

.show {
    display: block;
}

.hide {
    display: none;
}

.body {
    padding: 10px 15px;
    background: #fff;
    position: relative;
}

/* top */

.Top {
    width: 100%;
    text-align: center;
}

.orderstatus {
    width: 70px;
    height: 70px;
    margin: 15px auto 5px;
    color: #ffa20a;
}

.orderstatus.iconfont {
    font-size: 66px;
}

.price {
    color: #ffa20a;
    font-size: 24px;
    margin-bottom: 10px;
}

.priceC {
    display: inline-block;
    font-size: 36px;
}

/* 订单详情 */

.detailsLi {
    line-height: 50px;
    font-size: 14px;
    width: 100%;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
}

.detailsLiL {
    color: #666;
    text-align: left;
}

.detailsLiR {
    text-align: right;
}

.detailsBtnBody{
    width: 100%;
    height: 48px;
    margin: 30px auto;
}

.detailsBtn {
    width: calc(100% - 30px);
    background: #ffa20a;
    color: #fff;
    line-height: 48px;
    text-align: center;
    border-radius: 6px;
    font-size: 16px;
    margin: 0 auto;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}


