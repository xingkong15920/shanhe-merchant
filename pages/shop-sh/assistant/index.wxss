/* pages/merchants/manage/index.wxss */

view, scroll-view, ::after, ::before {
    box-sizing: border-box;
    transition: 0.3s all;
}
.hide{
    display: none;
}
.show{
    display: block;
}

/*swtich整体大小*/

.wx-switch-input {
    width: 42px !important;
    height: 20px !important;
    background: #ffa20a !important;
    border: #ffa20a !important;
}

/*白色样式（false的样式）*/

.wx-switch-input::before {
    background: #c6c6c6 !important;
    border: #c6c6c6 !important;
    width: 42px !important;
    height: 20px !important;
}

/*绿色样式（true的样式）*/

.wx-switch-input::after {
    margin-top: 2px !important;
    margin-left: 3px !important;
    width: 16px !important;
    height: 16px !important;
    box-shadow: none;
}


.chooseMendian{
    height: 40px;
    width: 100%;
    background: #fff;
    display: flex;
    justify-content: center;
    line-height: 40px;
    margin-bottom: 5px;
}
.mendianName{
    font-size: 14px;
    margin-right: 5px;
}
.chooseMendian .iconfont{
    font-size: 10px;
}

.tab-head {
    width: 100%;
    height: 48px;
    background: #fff;
    border-bottom: 1px solid #c6c6c6;
    display: flex;
    justify-content: space-between;
}

.tab-head-item {
    width: 25%;
    line-height: 48px;
    text-align: center;
    font-size: 16px;
    letter-spacing: 1px;
    position: relative;
}

.tab-head-item:nth-child(1) {
    width: 30%;
}

.tab-head-item:nth-child(2) {
    width: 30%;
}

.tab-head-item:nth-child(3) {
    width: 20%;
}

.tab-head-item:nth-child(4) {
    width: 20%;
}

.tab-head-item.active {
    color: #ffa20a;
}

.tab-head-item.active::after {
    content: '';
    width: 100%;
    height: 2px;
    background: #ffa20a;
    position: absolute;
    left: 0;
    bottom: -1px;
}

/* tab列表 */

.tab-body {
    width: 100%;
    height: calc(100% - 93px);
}

.listBody {
    height: calc(100% - 50px);
    margin-bottom: 10px;
    background: #fff;
}

.listBody_li {
    height: 50px;
    width: 100%;
    border-bottom: 1px solid #f5f5f5;
    position: relative;
    overflow: hidden;
}

.listBody_li.active {
    height: 90px;
}

.listBody_li:last-child {
    border: none;
}

.active .shopName {
    font-size: 12px;
    color: #ffa20a;
}

.nameLine {
    width: 30%;
    height: 50px;
    font-size: 12px;
    float: left;
    padding-left: 15px;
    display: flex;
    align-items: center;
}
.nameLineB{
    width: 100%;
}

.assistantname {
    width: 100%;
    color: #333;
    line-height: 1;
    margin-bottom: 4px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.shopname {
    width: 100%;
    color: #999;
    line-height: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.phoneLine {
    width: 30%;
    line-height: 50px;
    height: 50px;
    float: left;
    font-size: 14px;
    text-align: center;
}

.stateLine {
    width: 20%;
