/* pages/merchants/manage/index.wxss */
view, scroll-view,::after,::before {
    box-sizing: border-box;
    transition: .3s all;
}
.hide{
    display: none;
}
.show{
    display: block;
}

/* tab列表 */

.tab-body {
    width: 100%;
    height: calc(100% - 48px);
    background: #fff;
}

.listBody {
    height: 100%;
    padding-left: 15px;
}

.listBody_li {
    height: 50px;
    border-bottom: 1px solid #f5f5f5;
    position: relative;
    overflow: hidden;
}

.listBody_li.active {
    height: auto;
}

.listBody_li:last-child {
    border: none;
}

.active .shopName {
    font-size: 12px;
    color: #ffa20a;
}

.shopName {
    font-size: 16px;
    line-height: 50px;
}

.listIcon {
    width: 20px;
    height: 10px;
    font-size: 12px;
    position: absolute;
    top: 20px;
    right: 15px;
    text-align: center;
}

.active .listIcon {
    transform: rotate(-180deg);
}

.active .operation {
    display: block;
}

.operation {
    height: 40px;
    width: 100%;
    display: none;
}

.operationBtn {
    width: 90px;
    height: 30px;
    border-radius: 4px;
    font-size: 14px;
    line-height: 30px;
    text-align: center;
    color: #fff;
    float: left;
    margin-right: 15px;
}

.editData {
    background: #118eea;
}

.editRate {
    background: #1ab2a4;
}

.editShop {
    background: #fe4360;
}

.editDel {
    background: red;
}

.show-btn {
    margin-top: 100rpx;
    color: #2c2;
}
.selectRate{
    width:17em;
    height: 100%;
    line-height: 40px;
    padding: 0 15px;
}

/* 自定义弹窗 */
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 100%;
    overflow: hidden;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 9999;
    background: #f9f9f9;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 50rpx 32rpx;
}

.modal-input {
    width: 100%;
    height: 40px;
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
}

.input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
}

input-holder {
    color: #666;
    font-size: 28rpx;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.btn-confirm {
    width: 50%;
    color: #ec5300;
    text-align: center;
}
.noMove{
	position:relative;
	width:100%;
	float:left;
}
.move{
	width:60%
}
.delbox{
	width:0;
	height:50px;
	float:left;
	background: red;
	font-size:28rpx;
	text-align:center;
	line-height:50px;
	color:white;
	
}
.delboxMove{
	width:20%
}
.MDpush{
    background: #009588;
}
/* // 滑动 */


.wxpushTips{
    font-size: 12px;
    color: red;
    text-align: center;
    margin-bottom: 20px;
    margin-top: 15px;
}
.wxpushbingTit{
    display: flex;
    justify-content: space-between;
    font-size: 16px;
    color: #333;
    padding: 0 15px 10px;
    border-bottom: 1px solid #EEEEEE;
}
.wxpushbingList{
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    color: #666;
    padding: 0 5px;
    line-height: 40px;
}
.wxpushbingList-nick{
    width: 25%;
    overflow:hidden;
    white-space:nowrap;
}
.wxpushbingList-time{
    text-align: center;
    width: 50%;
}
.wxpushbingList-operation{
    width: 25%;
    text-align: right;
}
.wxpushbingList-operationBtn{
    display: inline-block;
    width: 60px;
    height: 28px;
    background: #FF0000;
    color: #fff;
    line-height: 28px;
    border-radius: 4px;
    text-align: center;
}